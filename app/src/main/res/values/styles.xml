<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/mycolors_app_background</item>
    </style>

    <style name="myapp_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/myapp_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="mystyles_TextoGrande" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/lista_diccionarios</item>
            <!--@dimen/abc_text_size_title_material</item-->
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>
